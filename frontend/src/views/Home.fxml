<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox xmlns="http://javafx.com/javafx/8.0.171"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="controllers.HomeController"
      spacing="30"
      alignment="CENTER"
      style="-fx-background-color: white; -fx-padding: 60">

    <Text text="Life Builders" style="-fx-font-size: 28px;" />

    <HBox spacing="40" alignment="CENTER">
        <Button text="Student Records"
                onAction="#handleStudentRecords"
                minWidth="140" minHeight="100" />
        <Button text="Training Courses"
                onAction="#handleTrainingCourses"
                minWidth="140" minHeight="100" />
        <Button text="Statistics"
                onAction="#handleStatistics"
                minWidth="140" minHeight="100" />
    </HBox>

</VBox>
