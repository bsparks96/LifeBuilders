<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.geometry.Insets?>



<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="controllers.HeaderController"
      spacing="15" alignment="CENTER_LEFT">
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <Button fx:id="backButton" onAction="#handleBack">
        <graphic>
            <ImageView fitHeight="24" fitWidth="24">
                <image>
                    <Image url="@/arrow_left.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="homeButton" onAction="#handleGoHome">
        <graphic>
            <ImageView fitHeight="24" fitWidth="24">
                <image>
                    <Image url="@/home.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>

    <Button fx:id="forwardButton" onAction="#handleForward">
        <graphic>
            <ImageView fitHeight="24" fitWidth="24">
                <image>
                    <Image url="@/arrow_right.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>
</HBox>
